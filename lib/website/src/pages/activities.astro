---
import { SectionHeaderStandard } from "@walle/components";
import { BaseLayout } from "@walle/layouts";
import { Icon } from "astro-icon/components";

interface FeaturedProject {
  title: string;
  subtitle: string;
  description: string;
  image: string;
  githubUrl?: string;
  websiteUrl?: string;
  linkedinUrl?: string;
}

interface TalkPodcast {
  title: string;
  description: string;
  image: string;
  url?: string;
  embedUrl?: string;
  slidesUrl?: string;
  type: "podcast" | "talk";
  date: string;
}

function formatDate(dateString: string): string {
  const options: Intl.DateTimeFormatOptions = {
    year: "numeric",
    month: "short",
    day: "numeric",
  };
  return new Date(dateString).toLocaleDateString("en-US", options);
}

function isEventPast(dateString: string): boolean {
  const eventDate = new Date(dateString);
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  return eventDate < today;
}

// Featured Projects data
const featuredProjects: FeaturedProject[] = [
  {
    title: "European OpenSource",
    subtitle: "Founder",
    description:
      "European OpenSource is a community-driven platform connecting developers, companies, and institutions across Europe to build a transparent and sovereign digital future through open-source innovation. We provide a comprehensive catalog of European open-source projects, fostering collaboration and strengthening digital independence.",
    image: "/img/projects/logo-european-opensource.png",
    githubUrl: "https://github.com/european-opensource",
    websiteUrl: "https://europeanopensource.eu",
    linkedinUrl: "https://www.linkedin.com/company/european-opensource",
  },
  {
    title: "Italia Open-Source",
    subtitle: "Founder",
    description:
      "The first platform dedicated to Italian open-source world. A community-driven project connecting Italian developers, companies, and open-source enthusiasts to collaborate and build together.",
    image: "/img/projects/logo-italia-opensource.png",
    githubUrl: "https://github.com/italia-opensource",
    websiteUrl: "https://italiaopensource.com",
    linkedinUrl: "https://www.linkedin.com/company/italia-open-source",
  },
  {
    title: "Latina in Tech",
    subtitle: "Community Manager",
    description:
      "LiT (Latina in Tech) is a Latina computer science community. The goal is to discuss a variety of topics, build a network, and share knowledge.",
    image: "/img/projects/logo-latina-in-tech.png",
    websiteUrl: "https://www.latinaintech.org/it",
    linkedinUrl: "https://www.linkedin.com/company/latina-in-tech/",
  },
];

// Talks and Podcasts data
const talksAndPodcasts: TalkPodcast[] = [
  {
    title: "European OpenSource: open code, shared future!",
    description:
      "Nel talk discuteremo dello stato attuale del mondo tech europeo e dell'impatto dell'open source su di esso. Presenteremo European OpenSource, la prima piattaforma come soluzione alle sfide future, e mostreremo come sviluppatori, aziende e istituzioni debbano prenderne atto e attivare soluzioni innovative in ambito security e compliance.",
    image: "/img/talks/opensearch_milan_13112025.jpeg",
    url: "https://www.meetup.com/it-it/opensearch-project-milan/events/311566107",
    slidesUrl: "/slides/European-OpenSource_open-code-shared-future.pdf",
    type: "talk",
    date: "2025-11-13",
  },
  {
    title: "Spotify Podcast Episode",
    description:
      "An insightful conversation about open-source, tech ecosystem and Italia Open-Source",
    image: "/img/talks/continuous_delivery_podcast_14052024.png",
    embedUrl:
      "https://open.spotify.com/embed/episode/6qF1w5mwLTfExRxAQcMHEO/video?utm_source=generator&theme=0",
    url: "https://open.spotify.com/episode/6qF1w5mwLTfExRxAQcMHEO",
    type: "podcast",
    date: "2024-05-14",
  },
];
---

<BaseLayout headerTitle="Activities">
  <SectionHeaderStandard title="Activities" variant="white" />

  <section class="projects-section">
    <div class="container">
      <!-- Featured Projects Section -->
      <div class="projects-group">
        <div class="group-header">
          <h2>Featured Projects</h2>
          <p class="group-description">Main projects and initiatives I'm actively involved in</p>
        </div>
        <div class="projects-grid">
          {
            featuredProjects.map((project) => (
              <article class="featured-project-card">
                <div class="featured-project-image-wrapper">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="featured-project-image"
                    loading="lazy"
                  />
                </div>

                <div class="featured-project-content">
                  <h3 class="featured-project-title">{project.title}</h3>
                  <p class="featured-project-subtitle">{project.subtitle}</p>
                  <p class="featured-project-description">{project.description}</p>

                  <div class="featured-project-footer">
                    <div class="featured-project-links">
                      {project.websiteUrl && (
                        <a
                          href={project.websiteUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="project-link-button website-button"
                          title="Visit Website"
                        >
                          <Icon name="mdi:web" class="link-icon" />
                          Website
                        </a>
                      )}
                      {project.githubUrl && (
                        <a
                          href={project.githubUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="project-link-button github-button"
                          title="View on GitHub"
                        >
                          <Icon name="mdi:github" class="link-icon" />
                          GitHub
                        </a>
                      )}
                      {project.linkedinUrl && (
                        <a
                          href={project.linkedinUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="project-link-button linkedin-button"
                          title="View on LinkedIn"
                        >
                          <Icon name="mdi:linkedin" class="link-icon" />
                          LinkedIn
                        </a>
                      )}
                    </div>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </div>

      <!-- Talks and Podcasts Section -->

      <div class="projects-group">
        <div class="group-header">
          <h2>Talks and Podcasts</h2>
          <p class="group-description">My appearances on various podcasts and talks.</p>
        </div>
        <div class="projects-grid">
          {
            talksAndPodcasts.map((item) => (
              <article class="talk-card">
                <div class="talk-image-wrapper">
                  <img src={item.image} alt={item.title} class="talk-image" loading="lazy" />
                  <div class="talk-type-badge">
                    <Icon
                      name={item.type === "podcast" ? "mdi:microphone" : "mdi:presentation"}
                      class="badge-icon"
                    />
                    <span>{item.type === "podcast" ? "Podcast" : "Talk"}</span>
                  </div>
                  {item.type === "talk" && !isEventPast(item.date) && (
                    <div class="event-status-badge upcoming">Upcoming</div>
                  )}
                </div>

                <div class="talk-content">
                  <h3 class="talk-title">{item.title}</h3>
                  <p class="talk-description">{item.description}</p>

                  <div class="talk-footer">
                    <div class="talk-date">
                      <Icon name="mdi:calendar" class="date-icon" />
                      <span>{formatDate(item.date)}</span>
                    </div>

                    <div class="talk-actions">
                      {item.type === "podcast" && item.embedUrl && (
                        <a
                          href={item.url || item.embedUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="action-button watch-button"
                        >
                          <Icon name="mdi:play-circle" class="button-icon" />
                          Watch
                        </a>
                      )}

                      {item.type === "talk" && (
                        <>
                          {item.url && (
                            <a
                              href={item.url}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="action-button event-button"
                            >
                              <Icon name="mdi:calendar-star" class="button-icon" />
                              Event
                            </a>
                          )}
                          {item.slidesUrl && (
                            <a
                              href={item.slidesUrl}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="action-button slides-button"
                            >
                              <Icon name="mdi:presentation-play" class="button-icon" />
                              Slides
                            </a>
                          )}
                        </>
                      )}
                    </div>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .projects-section {
    padding: 3rem 0 5rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .projects-group {
    margin-bottom: 5rem;
  }

  .projects-group:last-child {
    margin-bottom: 0;
  }

  .group-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .group-header h2 {
    color: var(--primary-dark);
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .group-description {
    color: var(--gray-dark);
    font-size: 1rem;
    margin: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  /* Featured Project Card Styles */
  .featured-project-card {
    background: var(--white);
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .featured-project-card:hover {
    border-color: var(--primary);
    box-shadow: 0 4px 12px rgba(0, 70, 173, 0.1);
    transform: translateY(-2px);
  }

  .featured-project-image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
    background: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .featured-project-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: calc(100% - 4rem);
    max-height: calc(100% - 4rem);
    width: auto;
    height: auto;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .featured-project-card:hover .featured-project-image {
    transform: translate(-50%, -50%) scale(1.05);
  }

  .featured-project-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .featured-project-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-dark);
    margin: 0 0 0.375rem 0;
    line-height: 1.3;
  }

  .featured-project-subtitle {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--secondary);
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .featured-project-description {
    color: var(--gray-dark);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
    flex: 1;
  }

  .featured-project-footer {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid #f3f4f6;
  }

  .featured-project-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .project-link-button {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .link-icon {
    width: 1.125rem;
    height: 1.125rem;
  }

  .website-button {
    background: var(--primary);
    color: var(--white);
  }

  .website-button:hover {
    background: var(--primary-dark);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 70, 173, 0.2);
  }

  .github-button {
    background: var(--black);
    color: var(--white);
  }

  .github-button:hover {
    background: #374151;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .linkedin-button {
    background: #0077b5;
    color: var(--white);
  }

  .linkedin-button:hover {
    background: #005582;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 119, 181, 0.2);
  }

  /* Talk and Podcast Cards Styles */
  .talk-card {
    background: var(--white);
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .talk-card:hover {
    border-color: var(--primary);
    box-shadow: 0 4px 12px rgba(0, 70, 173, 0.1);
    transform: translateY(-2px);
  }

  .talk-image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .talk-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .talk-card:hover .talk-image {
    transform: scale(1.05);
  }

  .talk-type-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 0.5rem 0.875rem;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--primary-dark);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .event-status-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--secondary);
    padding: 0.5rem 0.875rem;
    border-radius: 20px;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--white);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .event-status-badge.upcoming {
    background: var(--secondary);
    color: var(--white);
  }

  .badge-icon {
    width: 1rem;
    height: 1rem;
    color: var(--primary);
  }

  .talk-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .talk-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary-dark);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .talk-description {
    color: var(--gray-dark);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .talk-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid #f3f4f6;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .talk-date {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--gray-dark);
    font-size: 0.875rem;
  }

  .date-icon {
    width: 1rem;
    height: 1rem;
  }

  .talk-actions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .action-button {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    border-radius: 6px;
    font-size: 0.8125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .button-icon {
    width: 1rem;
    height: 1rem;
  }

  .watch-button {
    background: var(--primary);
    color: var(--white);
  }

  .watch-button:hover {
    background: var(--primary-dark);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 70, 173, 0.2);
  }

  .event-button {
    background: var(--secondary);
    color: var(--white);
  }

  .event-button:hover {
    background: var(--secondary-dark);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(189, 17, 120, 0.2);
  }

  .slides-button {
    background: var(--alternative);
    color: var(--black);
  }

  .slides-button:hover {
    background: var(--alternative-dark);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(255, 204, 0, 0.2);
  }

  @media (max-width: 768px) {
    .projects-section {
      padding: 2rem 0 3rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .projects-group {
      margin-bottom: 3.5rem;
    }

    .group-header {
      margin-bottom: 2rem;
    }

    .group-header h2 {
      font-size: 1.75rem;
    }

    .group-description {
      font-size: 0.9375rem;
    }

    .featured-project-content {
      padding: 1.25rem;
    }

    .featured-project-title {
      font-size: 1.25rem;
    }

    .featured-project-subtitle {
      font-size: 0.8125rem;
    }

    .featured-project-description {
      font-size: 0.875rem;
    }

    .featured-project-image {
      max-width: calc(100% - 3rem);
      max-height: calc(100% - 3rem);
    }

    .project-link-button {
      padding: 0.5rem 0.875rem;
      font-size: 0.8125rem;
    }

    .talk-content {
      padding: 1.25rem;
    }

    .talk-title {
      font-size: 1.125rem;
    }

    .talk-description {
      font-size: 0.875rem;
    }

    .talk-type-badge,
    .event-status-badge {
      top: 0.75rem;
      padding: 0.375rem 0.75rem;
      font-size: 0.75rem;
    }

    .talk-type-badge {
      right: 0.75rem;
    }

    .event-status-badge {
      left: 0.75rem;
    }

    .talk-actions {
      gap: 0.375rem;
    }

    .action-button {
      padding: 0.375rem 0.75rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .projects-section {
      padding: 1.5rem 0 2.5rem;
    }

    .group-header h2 {
      font-size: 1.5rem;
    }

    .featured-project-title {
      font-size: 1.125rem;
    }

    .featured-project-subtitle {
      font-size: 0.75rem;
    }

    .featured-project-image {
      max-width: calc(100% - 2rem);
      max-height: calc(100% - 2rem);
    }

    .featured-project-links {
      gap: 0.5rem;
    }

    .project-link-button {
      padding: 0.5rem 0.75rem;
      font-size: 0.75rem;
      flex: 1;
      justify-content: center;
      min-width: 0;
    }

    .link-icon {
      width: 1rem;
      height: 1rem;
    }
  }
</style>
